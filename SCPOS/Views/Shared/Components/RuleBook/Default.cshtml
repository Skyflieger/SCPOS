@model RuleBookViewModel
<link rel="stylesheet" href="~/css/rulebook.css"/>

<input type="number" id="page" value="@Model.currentPage" min="1" max="@Model.maxPage"/>

<div class="rulebook">@Html.Raw(Model.html)</div>

<script>
    jQuery('#page').change(function (){
        let data = {
            "id": document.getElementById("page").value
        }
        changeWindowContent('@Url.Action("RuleBook", "WindowComponent")', '@Model.windowId', data)
    })
</script>